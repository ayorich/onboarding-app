{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": ["./*"],
      "@features/*": ["./src/features/*"],
      "@redux/*": ["./src/redux/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.js",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "src/app/(tabs)/_layout.js",
    "src/app/(tabs)/profile.js",
    "src/app/(tabs)/users.js",
    "src/app/_layout.js",
    "src/app/+not-found.js",
    "src/app/index.js"
  ]
}
